<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".IdentitasActivity">

    <View
        android:id="@+id/ic_topat"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_topat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="35dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_black"
        android:text="Masuk Sebagai"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlPetugas"
        android:layout_width="326dp"
        android:layout_height="263dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/rec_pink"
        android:clickable="true"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <View
            android:id="@+id/vPetugas"
            android:layout_width="330dp"
            android:layout_height="235dp"
            android:onClick="petugas"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rec_upink" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vPetugas"
            android:layout_alignEnd="@+id/vPetugas"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="@font/lato_black"
            android:text="Petugas Sekolah"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <View
            android:layout_width="165dp"
            android:layout_height="180dp"
            android:layout_alignStart="@+id/vPetugas"
            android:layout_alignBottom="@+id/vPetugas"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/ic_petugas" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMurid"
        android:layout_width="328dp"
        android:layout_height="266dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/rec_pink"
        android:clickable="true"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlPetugas">

        <View
            android:id="@+id/vMurid"
            android:layout_width="330dp"
            android:layout_height="235dp"
            android:onClick="murid"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rec_upink" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vMurid"
            android:layout_alignEnd="@+id/vMurid"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="@font/lato_black"
            android:text="Murid Sekolah"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <View
            android:layout_width="165dp"
            android:layout_height="180dp"
            android:layout_alignStart="@+id/vMurid"
            android:layout_alignBottom="@+id/vMurid"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/ic_murid" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>