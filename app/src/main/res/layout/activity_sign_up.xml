<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".SignUpActivity">

    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="back2"
        android:background="@color/pink"
        android:src="@drawable/ic_vector_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:src="@drawable/ic_logo_topat" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/imageView3"
            android:fontFamily="@font/lato_bold"
            android:text="Daftar"
            android:textColor="@color/black"
            android:textSize="36dp" />


        <TextView
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/imageView3"
            android:fontFamily="@font/lato_regular"
            android:text="Lorem ipsum is a placeholder text"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlSignIn">

        <EditText
            android:id="@+id/etUSERd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-20dp"
            android:layout_toEndOf="@+id/viewPP"
            android:background="@drawable/rec_grey"
            android:inputType="text"
            android:hint="E-Mail"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="16dp" />

        <View
            android:id="@+id/viewPP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_vector_email"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlUser">

        <EditText
            android:id="@+id/etEmaild"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-20dp"
            android:layout_toEndOf="@+id/viewMail"
            android:background="@drawable/rec_grey"
            android:inputType="textEmailAddress"
            android:hint="Username"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="16dp" />

        <View
            android:id="@+id/viewMail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_vector_uprofile"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/rGmail">

        <EditText
            android:id="@+id/etPASSd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-20dp"
            android:layout_toEndOf="@+id/viewLock"
            android:background="@drawable/rec_grey"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="16dp" />

        <View
            android:id="@+id/viewLock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_vector_ugembok"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/rlPass"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/lato_bold"
        android:hint="Daftar"
        android:onClick="signUp"
        android:textAllCaps="false"
        android:textColorHint="@color/white"
        app:cornerRadius="23dp"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlPass" />

    <RelativeLayout
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_daftar">

        <View
            android:id="@+id/view"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="#000000"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/dengan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/pink"
            android:text="  Atau masuk dengan "
            android:textColor="#717171"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_google1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/garis"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garis">





    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_google1">

        <TextView
            android:id="@+id/tdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/lato_regular"
            android:text="Sudah punya akun?"
            android:textColor="#717171"
            android:textSize="15sp" />

        <TextView
            android:onClick="masukSekarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tdk"
            android:fontFamily="@font/lato_bold"
            android:text="Masuk"
            android:textColor="@color/red"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:id="@+id/ViewBG"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rec_uwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>